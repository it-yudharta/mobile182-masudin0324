<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        tools:context=".MainActivity">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Masukan nama"
            android:id="@+id/edt_name"
            android:inputType="text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Makanan"
            android:textSize="25dp"/>

        <CheckBox
            android:id="@+id/Rawon_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rawon"
            android:paddingLeft="16dp"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="30dp"
                android:onClick="incrementRawon"
                android:text="+"
                android:layout_height="30dp" />

            <TextView
                android:textColor="#212121"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:id="@+id/quantity_rawon"
                android:textSize="25dp"/>

            <Button
                android:layout_width="30dp"
                android:onClick="decrementRawon"
                android:text="-"
                android:layout_height="30dp" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/Pecel_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pecel"
            android:paddingLeft="16dp"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="30dp"
                android:onClick="incrementPecel"
                android:text="+"
                android:layout_height="30dp" />

            <TextView
                android:textColor="#212121"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:id="@+id/quantity_pecel"
                android:textSize="25dp"/>

            <Button
                android:layout_width="30dp"
                android:onClick="decrementPecel"
                android:text="-"
                android:layout_height="30dp" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/Soto_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soto"
            android:paddingLeft="16dp"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="30dp"
                android:onClick="incrementSoto"
                android:text="+"
                android:layout_height="30dp" />

            <TextView
                android:textColor="#212121"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:id="@+id/quantity_soto"
                android:textSize="25dp"/>

            <Button
                android:layout_width="30dp"
                android:onClick="decrementSoto"
                android:text="-"
                android:layout_height="30dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minuman"
            android:textSize="25dp"/>


        <CheckBox
            android:id="@+id/Escampor_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escampor"
            android:paddingLeft="16dp"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="30dp"
                android:onClick="incrementEscampur"
                android:text="+"
                android:layout_height="30dp" />

            <TextView
                android:textColor="#212121"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:id="@+id/quantity_escampur"
                android:textSize="25dp"/>

            <Button
                android:layout_width="30dp"
                android:onClick="decrementEscampur"
                android:text="-"
                android:layout_height="30dp" />

        </LinearLayout>


        <CheckBox
            android:id="@+id/Kopi_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kopi"
            android:paddingLeft="16dp"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="30dp"
                android:onClick="incrementKopi"
                android:text="+"
                android:layout_height="30dp" />

            <TextView
                android:textColor="#212121"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:id="@+id/quantity_kopi"
                android:textSize="25dp"/>

            <Button
                android:layout_width="30dp"
                android:onClick="decrementKopi"
                android:text="-"
                android:layout_height="30dp" />

        </LinearLayout>


        <CheckBox
            android:id="@+id/Esdegan_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ESdegan"
            android:paddingLeft="16dp"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="30dp"
                android:onClick="incrementEsdegan"
                android:text="+"
                android:layout_height="30dp" />

            <TextView
                android:textColor="#212121"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:id="@+id/quantity_esdegan"
                android:textSize="25dp"/>

            <Button
                android:layout_width="30dp"
                android:onClick="decrementEsdegan"
                android:text="-"
                android:layout_height="30dp" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambahkan Topping"
            android:textSize="25dp"/>

        <CheckBox
            android:id="@+id/WhippedCream_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Krim"
            android:paddingLeft="16dp"
            android:textSize="15sp"/>

        <CheckBox
            android:id="@+id/Chocolate_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coklat"
            android:paddingLeft="16dp"
            android:textSize="15sp"/>

        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah"
            android:textSize="25dp"
            android:textAllCaps="true"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#212121"
            android:id="@+id/total_item"
            android:textSize="25dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_marginBottom="16dp"
            android:onClick="getTotal"
            android:layout_height="wrap_content"
            android:text="Total Item"/>

        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga"
            android:textSize="30dp"
            android:textAllCaps="true"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#212121"
            android:id="@+id/price_textview"
            android:textSize="25dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_marginBottom="16dp"
            android:onClick="Submitorder"
            android:layout_height="wrap_content"
            android:text="Pesan Sekarang"/>


    </LinearLayout>
</ScrollView>